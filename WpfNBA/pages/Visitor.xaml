<Page x:Class="WpfNBA.pages.Visitor"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfNBA.pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Visitor Menu">

    <Grid>
        <UniformGrid Columns="2" Rows="2">
            <Button x:Name="btnTeams" Click="btnTeams_Click" Content="Teams" Style="{StaticResource menuButton}"></Button>
            <Button x:Name="btnPlayers" Click="btnPlayers_Click"  Content="Players" Style="{StaticResource menuButton}"></Button>
            <Button x:Name="btnMatchup" Click="btnMatchup_Click"  Content="Matchup" Style="{StaticResource menuButton}"></Button>
            <Button x:Name="btnPhotos" Click="btnPhotos_Click"  Content="Photos" Style="{StaticResource menuButton}"></Button>
        </UniformGrid>
    </Grid>
</Page>
